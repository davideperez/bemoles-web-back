name: NodeJS Server Deployment

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v2
    
    - name: Install dependencies
      run: npm install
      
    #- name: Build server
    #  run: npm run build
      
    - name: Deploy server
      run:
        ssh root@212.1.214.231 "cd /var/www/your/bemoles-web-back && git pull origin main && npm install && pm2 restart server"
      env:
        HOST: ${{ secrets.HOST }}
        USERNAME: ${{ secrets.USERNAME }}
        PORT: ${{ secrets.PORT }}
        SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}